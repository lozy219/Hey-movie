<script>
//Automatically scroll to bottom
$(function () {
         $("html, body").animate({ scrollTop:  $(window).height() }, 1400);
         return false; 
});
			$(document).ready(function(){
				//	When user clicks on tab, this code will be executed
				$("#cssmenu li").click(function() {
					//	First remove class "active" from currently active tab
					$("#cssmenu li").removeClass('active');

					//	Now add class "active" to the selected/clicked tab
					$(this).addClass("active");

					//	Hide all tab content
					$(".mtab_content").hide();

					//	Here we get the href value of the selected tab
					var selected_tab = $(this).find("a").attr("href");

					//	Show the selected tab content
					$(selected_tab).fadeIn();

					//	At the end, we add return false so that the click on the link is not executed
					return false;
				});

				$("#update-ticket a").click(function() {
					//	Hide the movie management page
					$(".ticket-management").hide();

					$.post('/ajax/store_selected_ticket', {'ticket_id':$(this).attr('id')}, function(data) {
							$.post('/ajax/get_selected_ticket', {'ticket_id':$(this).attr('id')}, function(data) {
							});
					});

					$(".update-ticket").fadeIn();

					event.preventDefault();
					//	At the end, we add return false so that the click on the link is not executed
					return false;
				});

				$("#simulate").click(function(){
					$('a[rel="tab1"]').trigger("click");
				});
			});
		</script>
<div class="content-wrapper">
	<div class="content ticket-management">
		<h2 class="content-head is-center" style="margin-top: 5%; margin-bottom: 0%">Ticket Management</h2>
	</div>

<div id="tab1" class="mtab_content" style="margin-bottom: 5%;">
	<br />
	<table class="pure-table admin-long-table">
		<thead>
			<tr style="text-align:center; font-size: 13px">
				<th>Movie Title</th>
				<th>Theater</th>
				<th>Start Time</th>
				<th>End Time</th>
				<th>Customer Name</th>
				<th>Seat Number</th>
				<th>Booking Time</th>
				<th>Operation</th>
			</tr>
		</thead>

		<tbody>

		<%for (i = 0; i < all_ticket.length; i ++) {
			if (i % 2 === 0) { %>
				<tr class="pure-table-odd" style="font-size: 12px">
				<td><%= all_ticket[i].movie_title  %></td>
					<td><%= all_ticket[i].theatre_name %></td>
					<%  var t = all_ticket[i].start_time.split(/[- :]/);
               			 var k = t[2].split(/[T]/);
               			 var start_time = t[0] + "-" + t[1] + "-" + k[0]; %>
					<td><%= start_time %></td>
					<%  var t = all_ticket[i].end_time.split(/[- :]/);
               			 var k = t[2].split(/[T]/);
               			 var end_time = t[0] + "-" + t[1] + "-" + k[0]; %>
					<td><%= end_time %></td>
					<td><%= all_ticket[i].name %></td>
					<td><%= all_ticket[i].seat_no %></td>
					<%  var t = all_ticket[i].booking_time.split(/[- :]/);
               			 var k = t[2].split(/[T]/);
               			 var booking_time = t[0] + "-" + t[1] + "-" + k[0]; %>
					<td><%= booking_time %></td>
					<td>

						<span id="update-ticket"><a class="pure-button" id="<%= all_ticket[i].ticket_id %>" href="">Update</a></span>						
						<a class="pure-button button-error" href="/admin/ticket/delete_ticket?<%=all_ticket[i].ticket_id%>">Delete</a>
					</td>
				</tr>
			<% } else { %>
				<tr style="font-size: 12px">
					<td><%= all_ticket[i].movie_title  %></td>
					<td><%= all_ticket[i].theatre_name %></td>
					<%  var t = all_ticket[i].start_time.split(/[- :]/);
               			 var k = t[2].split(/[T]/);
               			 var start_time = t[0] + "-" + t[1] + "-" + k[0]; %>
					<td><%= start_time %></td>
					<%  var t = all_ticket[i].end_time.split(/[- :]/);
               			 var k = t[2].split(/[T]/);
               			 var end_time = t[0] + "-" + t[1] + "-" + k[0]; %>
					<td><%= end_time %></td>
					<td><%= all_ticket[i].name %></td>
					<td><%= all_ticket[i].seat_no %></td>
					<%  var t = all_ticket[i].booking_time.split(/[- :]/);
               			 var k = t[2].split(/[T]/);
               			 var booking_time = t[0] + "-" + t[1] + "-" + k[0]; %>
					<td><%= booking_time %></td>
					<td>

						<span id="update-ticket"><a class="pure-button" id="<%= all_ticket[i].ticket_id %>" href="">Update</a></span>	
						<a class="pure-button button-error" href="/admin/ticket/delete_ticket?<%=all_ticket[i].ticket_id%>">Delete</a>
					</td>
				</tr>
			<%}%>
		<% } %>
		</tbody>
	</table>
	<%= include admin-ticket-update-ticket.ejs %>
</div>
</div>