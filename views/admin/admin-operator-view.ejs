<div id="tab1" class="mtab_content" style="margin-left: 10%; margin-bottom: 5%">
	<br />
	<table class="pure-table" style="margin-top: 5%;">
		<thead>
			<tr style="text-align:center">
				<th>Name</th>
				<th>Country</th>
				<th>Operations</th>
			</tr>
		</thead>

		<tbody>

		<%for (i = 0; i < all_operator.length; i ++) {
			if (i % 2 === 0) { %>
				<tr class="pure-table-odd">
					<td><%= all_operator[i].name  %></td>
					<td><%= all_operator[i].country %></td>
					<td>
						<span id="add-show">
						<a class="pure-button" href="#">Update</a>
						<a class="pure-button button-error" href="/admin/movie/delete_operator?<%=all_operator[i].operator_id%>">Delete</a>
					</td>
				</tr>
			<% } else { %>
				<tr>
					<td><%= all_operator[i].name  %></td>
					<td><%= all_operator[i].country %></td>
					<td>
						<span id="add-show">
						<a class="pure-button" href="#">Update</a>
						<a class="pure-button button-error" href="/admin/movie/delete_operator?<%=all_operator[i].operator_id%>">Delete</a>
					</td>
				</tr>
			<%}%>
		<% } %>
		</tbody>
	</table>
</div>

