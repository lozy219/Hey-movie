<script>
$(function () {
         $("html, body").animate({ scrollTop:  $(document).height()-$(window).height() }, 1800);
         return false; 
});
</script>

<div class="content-wrapper">
    <div class="content">
        <h2 class="content-head is-center">Director Management</h2>
        <form action="/admin/manage_director">
        	<div id='cssmenu'>
				<ul style="width: 600px">
  					 <li class='active'><a href='#tab1' rel="tab1"><span>Add Director</span></a></li>
  					 <li class='last'><a href='#tab2' rel="tab2"><span>View Directors</span></a></li>
  					 <li class='last'><a href='#tab3' rel="tab3"><span>Delete Director</span></a></li>
				</ul>
			</div>
   		</form>

   	<!--  tab change script  -->
    <script>
    		$(document).ready(function(){
    //  When user clicks on tab, this code will be executed
    	$("#cssmenu li").click(function() {
        //  First remove class "active" from currently active tab
        $("#cssmenu li").removeClass('active');
 
        //  Now add class "active" to the selected/clicked tab
        $(this).addClass("active");
 
        //  Hide all tab content
        $(".mtab_content").hide();
 
        //  Here we get the href value of the selected tab
        var selected_tab = $(this).find("a").attr("href");
 
        //  Show the selected tab content
        $(selected_tab).fadeIn();
 
        //  At the end, we add return false so that the click on the link is not executed
        return false;
    	});
 	 	$("#simulate").click(function(){
    	$('a[rel="tab2"]').trigger("click");
 		 });
		});
	</script>
  <div id="tab1" class="mtab_content">


   		<form action="/admin/add_director" method="post" class="pure-form pure-form-single" style="margin-top: 5%; margin-left: 0.5%;">
 

                    <input name="director_name" type="text" placeholder="Director Name">
                    <input name="director_gender" type="text" placeholder="Gender">
                    <input name="director_nationality" type="text" placeholder="Nationality"><br></br>

                    <button type="submit" class="pure-button pure-button-primary" style="margin-bottom: 10%">Add Director</button>
            
        </form>
    </div>

    <div id="tab2" class="mtab_content" style="display: none; margin-left: 43%; margin-bottom: 5%">
