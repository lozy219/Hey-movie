<div id="tab1" class="mtab_content" style="margin-left: 20%; margin-bottom: 5%">
	<br />
	<table class="pure-table" style="margin-top: 5%;">
		<thead>
			<tr style="text-align:center">
				<th>Name</th>
				<th>Nationality</th>
				<th>Gender</th>
				<th>Average Rating</th>
				<th>Operations</th>
			</tr>
		</thead>

		<tbody>

		<%for (i = 0; i < all_director.length; i ++) {
			if (i % 2 === 0) { %>
				<tr class="pure-table-odd">
					<td><%= all_director[i].name  %></td>
					<td><%= all_director[i].nationality %></td>
					<td><%= all_director[i].gender %></td>
					<td>0</td>
					<td>
						<a class="pure-button" href="#">Update</a>
						<a class="pure-button button-error" href="/admin/director/delete_director?<%=all_director[i].director_id%>">Delete</a>
					</td>
				</tr>
			<% } else { %>
				<tr>
					<td><%= all_director[i].name  %></td>
					<td><%= all_director[i].nationality %></td>
					<td><%= all_director[i].gender %></td>
					<td>0</td>
					<td>
						<a class="pure-button" href="#">Update</a>
						<a class="pure-button button-error" href="/admin/director/delete_director?<%=all_director[i].director_id%>">Delete</a>
					</td>
				</tr>
			<%}%>
		<% } %>
		</tbody>
	</table>
</div>

