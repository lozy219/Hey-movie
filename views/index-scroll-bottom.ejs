butong_net_right2_movie.innerHTML=butong_net_right1_movie.innerHTML
function Marquee4(){
    if(butong_net_right_movie.scrollLeft<=0)
        butong_net_right_movie.scrollLeft+=butong_net_right2_movie.offsetWidth
