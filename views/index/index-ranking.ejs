<div class="content-wrapper">
  <!-- <div class="content"> -->
    <h2 class="content-head is-center">Ranking</h2>

<form action="/admin/movie/add_movie" method="post" class="pure-form pure-form-single" style="margin-top: 5%; margin-left: 0.5%;">

   <select name="status" style="height: 36px;width: 100%; margin-bottom: 1em;">
      <option value="">Select Status</option>
      <option value="on show">On show</option>
      <option value="trailer">Trailer</option>
      <option value="off show">Off show</option>
    </select>
      <option value="">Select Status</option>
      <option value="on show">On show</option>
      <option value="trailer">Trailer</option>

      <button type="submit" class="pure-button pure-button-primary" style="margin-bottom: 10%">Add Movie</button>

</form>

      <% for (j = 0; j < ranking_movie.length; j+=5) { %>
        <div class="pure-g">
          <div class="l-box pure-u-1 pure-u-md-1-2 pure-u-lg-1-4">
            <% for (i = j; i < j+5 && i<ranking_movie.length; i++) { %>
              <div class="div-inline" style="width:170px">
                <img src="<%= ranking_movie[i].poster_link %>" height=167 style="margin-left: 7%">
                <h3 class="content-subhead" style="font-size:16px; text-aligh: center">
                  <h style="color: black; margin-left: 5%;"><%= i+1 %>.</h>
                  <h style="text-align: center"><%= ranking_movie[i].title  %></h>
                </h3>
            
                <li class="stars" fen="<%= ranking_movie[i].IMDB_rating %>" style="margin-left: -5%">
                </li>

                &nbsp

                <h style="color: red; font-size:17px ">
                  <%=ranking_movie[i].IMDB_rating %>
                </h>

                <script>
                  $.fn.stars = function() {
                      return $(this).each(function() {
                        // Get the value
                        var val = parseFloat($(this).attr('fen'));
                        // Make sure that the value is in 0 - 5 range, multiply to get width
                        var size = Math.max(0, (Math.min(10, val))) * 14;
                        // Create stars holder
                        var $li = $('<li />').width(size);
                        // Replace the numerical value with stars
                        $(this).html($li);
                      });
                  }


                  $('.stars').stars();
                </script>

              <li>Genre: <%=ranking_movie[i].genre%></li>
              <li>Year: <%=ranking_movie[i].year%></li>
              <li>Language: <%=ranking_movie[i].language%></li>
              <li>Length: <%=ranking_movie[i].length%>mins</li>
              <li>IMDB_link: <a href="<%=ranking_movie[i].IMDB_link%>"><img src="img/icon/IMDB_icon.png" width = 40 height = 40 style="margin-bottom: -6%"></a></li>
            </div>
          <% } %>   
        </div></div> 
      <% } %>
    </div>
</div>
