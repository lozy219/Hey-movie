						var movie = JSON.parse(data);
						$("#bmovie_id").val(movie.movie_id);
						$("#bmovie").val(movie.title);
					});

					// $.post('/ajax/get_shows_option', {'movie_id':$(this).attr('id')}, function(data) {
					// 	alert('a');
