<% if(onshow_movie.length < 2){ %>
<script>
//Automatically scroll to bottom
$(function () {
         $("html, body").animate({ scrollTop:  $(document).height()-$(window).height() }, 1800);
         return false; 
});
</script> <% } else{ %>   
<script>
//Automatically scroll to bottom
$(function () {
         $("html, body").animate({ scrollTop:  $(document).height()-800 }, 1800);
         return false; 
});
</script> <% } %>
<div class="content-wrapper">
    <div class="content">
        <h2 class="content-head is-center">On Showing</h2>
        <div class="pure-g">
            <div class="l-box pure-u-1 pure-u-md-1-2 pure-u-lg-1-4">
            <!--  <% console.log(onshow_movie); %> -->
            <style>
            .div-inline{ float:left; margin-left:7.5%;} 
            </style>
            
                <% for(i=0;i<onshow_movie.length;i++){ %>
                <div class="div-inline">
                <img src="<%= onshow_movie[i].poster_link %>" width=120 height=167>&nbsp&nbsp&nbsp
                <h3 class="content-subhead">
                    <i class="fa fa-rocket"></i>
                    <h style="color: black"><%= i+1 %>.</h>
                    <%= onshow_movie[i].title  %><h style="color: red">&nbsp&nbsp&nbsp<%=onshow_movie[i].IMDB_rating %><h>
                </h3>
                <li>Genre: <%=onshow_movie[i].genre%></li>
                <li>Year: <%=onshow_movie[i].year%></li>
                <li>Language: <%=onshow_movie[i].language%></li>
                <li>Length: <%=onshow_movie[i].length%>mins</li>
                <li>IMDB_link: <a href="<%=onshow_movie[i].IMDB_link%>"><img src="img/icon/IMDB_icon.png" width = 40 height = 40 style="margin-bottom: -6%"></a></li></div>
                <% } %>
            
        </div>
    </div>