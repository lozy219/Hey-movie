<%= include header.ejs %>
<div class="content-wrapper-form">
    <div class="content">
        <p class="signup-header">Join Hey Movie!</p>
        <div class="signup-error-box"> Invalid username or email!</div> 
        <p></p>
        <form action="/user/signup" method="post" class="pure-form pure-form-single">
            <fieldset>
                    <!-- <legend>A compact inline form</legend> -->

                    <input id="name" name="name" type="text" placeholder="Your Name">
                    <input type="password" name="password" placeholder="Password">
                    <input type="email" name="email" placeholder="Email">

                    <button type="submit" class="pure-button pure-button-primary">Sign up</button>
            </fieldset>
        </form>
        <div class="signup-have-account">
            <ul>
                Already have an account? 
                <a href="/login" style="text-decoration:none;">Sign in</a>
            </ul>
        </div> 
    </div>
</div>

<%= include footer.ejs %>